@{
    ViewData["Title"] = "Candidates";
}
@{
    Layout = "_LayoutOfficial";
}


<script src="../lib/jquery/dist/jquery.min.js"></script>
<script src="../js/Candidates.js"></script>

<link href="../vendor/datatable/jquery.datatables.min.css" rel="stylesheet" />
<script src="../vendor/datatable/jquery.datatables.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {

        Load_Candidates_Details();
        Load_Candidates_Party_DropDown_Details();
        Load_Candidates_Constituency_DropDown_Details();
    });


</script>
<div class="pagetitle">
    <h1>Official</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Candidates</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        Candidates
                        <button type="button" style="float: right;" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#basicModal"><i class="bi bi-plus-square"></i></button>
                    </h5>

                    <div class="modal fade" id="basicModal" tabindex="-1" aria-hidden="true" style="display: none;">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Add New Candidates</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-4">Name</div>
                                        <div class="col-md-8"><input type="text" id="txtName" class="form-control" /></div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-md-4">Address</div>
                                        <div class="col-md-8"><textarea type="text" id="txtAddress" class="form-control"></textarea></div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-md-4">Party</div>
                                        <div class="col-md-8">
                                            <select id="ddlParty"class="form-control">
                                                
                                            </select>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-md-4">Constituency</div>
                                        <div class="col-md-8">
                                            <select id="ddlConstituency" class="form-control">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary" onclick="Candidates_Add()">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="filter">
                    </div>

                    <!-- Table with stripped rows -->
                    <table id="tblCandidates" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Candidate Name</th>
                                <th>Address</th>
                                <th>Party</th>
                                <th>Constituency</th>
                            </tr>
                        </thead>
                        <tbody id="tbCandidates">
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>