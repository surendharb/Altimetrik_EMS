@{
    ViewData["Title"] = "Symbols";
}
@{
    Layout = "_LayoutOfficial";
}


<script src="../lib/jquery/dist/jquery.min.js"></script>
<script src="../js/Symbols.js"></script>

<link href="../vendor/datatable/jquery.datatables.min.css" rel="stylesheet" />
<script src="../vendor/datatable/jquery.datatables.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {

        Load_Symbols_Details();
    });


</script>
<div class="pagetitle">
    <h1>Official</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Symbols</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        Symbols
                        <button type="button" style="float: right;" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#basicModal"><i class="bi bi-plus-square"></i></button>
                    </h5>

                    <div class="modal fade" id="basicModal" tabindex="-1" aria-hidden="true" style="display: none;">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Add New Symbols</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-4">Name</div>
                                        <div class="col-md-8"><input type="text" id="txtName" class="form-control" /></div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-md-4">File Upload</div>
                                        <div class="col-md-8"><input class="form-control" type="file" id="formFile"></div>                                         
                                    </div>
                                     
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary" onclick="Symbols_Add()">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="filter">
                    </div>

                    <!-- Table with stripped rows -->
                    <table id="tblSymbols" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Symbol</th>
                            </tr>
                        </thead>
                        <tbody id="tbSymbols">
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>